<%= content_tag :div, html_attributes do %>
  <% if header? %>
    <%= content_tag :div, class: theme_css("container/header") do %>
      <%= visual if visual? %>
      <%= header %>
      <% if action? || dismiss_icon? %>
        <%= content_tag :div, class: theme_css("container/actions") do %>
          <%= action if action?%>
          <%= dismiss_icon if dismiss_icon? %>
        <% end %>
      <% end %>
    <% end %>
    <%= content %>
  <% else %>
    <%= content_tag :div, class: theme_css("container/header") do %>
      <%= visual if visual? %>
      <%= content_tag :div, content, class: theme_css("container/content") %>
      <% if action? || dismiss_icon? %>
        <%= content_tag :div, class: theme_css("container/actions") do %>
          <%= action if action?%>
          <%= dismiss_icon if dismiss_icon? %>
        <% end %>
      <% end %>
    <% end %>
  <% end %>
<% end %>

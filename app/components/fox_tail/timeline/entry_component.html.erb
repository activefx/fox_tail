<%= content_tag :ol, html_attributes do %>
  <% if vertical? %>
    <%= visual %>
    <%= content %>
  <% else %>
    <%= content_tag :div, class: theme_css("container/timeline") do %>
      <%= visual %>
      <%= content_tag :div, nil, class: theme_css(:line) %>
    <% end %>
    <%= content_tag :div, content, class: theme_css("container/content") %>
  <% end %>
<% end %>

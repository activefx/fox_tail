<%= render(FoxTail::DropdownComponent.new(:icon_button_trigger_dropdown)) do |c| %>
  <% c.with_trigger do |trigger| %>
    <%= render FoxTail::IconButtonComponent.new("ellipsis-vertical", trigger.html_attributes.merge(variant: :outline, theme: trigger.theme)).with_content("Dropdown") %>
  <% end %>
  <%
    c.with_menu do |menu|
      menu.with_item.with_content "Dashboard"
      menu.with_item.with_content "Settings"
      menu.with_item.with_content "Earnings"
      menu.with_item.with_content "Sign Out"
    end
  %>
<% end %>

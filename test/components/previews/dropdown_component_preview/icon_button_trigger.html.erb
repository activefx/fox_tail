    <%= render Flowbite::IconButtonComponent.new("ellipsis-vertical", trigger.html_attributes).with_variant(:outline).with_content("Dropdown") %>
  <% end %>
  <%
    c.with_menu do |menu|
      menu.with_item.with_content "Dashboard"
      menu.with_item.with_content "Settings"
      menu.with_item.with_content "Earnings"
      menu.with_item.with_content "Sign Out"
    end
  %>
<% end %>

<%= render FoxTail::ModalComponent.new size: :xl do |m| %>
  <% m.with_trigger do |trigger| %>
    <%= render FoxTail::ButtonComponent.new trigger.html_attributes do %>
      Open Extra Large Modal
    <% end %>
  <% end %>

  <%= render FoxTail::DialogComponent.new do |c| %>
    <% c.with_header do %>
      <h3 class="text-xl font-semibold">Extra Large Modal</h3>
      <%= render m.close_icon_button_component %>
    <% end %>
    <% c.with_footer class: "justify-end" do %>
      <%= render m.close_button_component.with_content("I Accept") %>
      <%= render m.close_button_component(color: :neutral, variant: :outline).with_content("I Decline") %>
    <% end %>
    <div class="space-y-2">
      <% Faker::Books::Lovecraft.paragraphs(number: 5).each do |p| %>
        <%= content_tag :p, p %>
      <% end %>
    </div>
  <% end %>
<% end %>

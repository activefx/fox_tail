{
  "compilerOptions": {
    "lib": ["dom", "es2020"],
    "outDir": "./dist/cjs/",
    "rootDirs": [
      "./src/",
      "./app/components/fox_tail/"
    ],
    "target": "es2020",
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "module": "commonjs",
    "allowJs": true,
    "esModuleInterop": true
  },
  "include": ["src/**/*.ts", "app/components/fox_tail/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}